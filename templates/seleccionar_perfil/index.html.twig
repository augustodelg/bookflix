{% extends 'base.html.twig' %}

{% block title %}Hello SeleccionarPerfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="col-xl-12 col-sm-12" style="margin-top:-3%">
    <img src="{{ asset('logo.svg', 'images') }}" class=" img-fluid rounded mx-auto d-block" height="200" width="800" alt="Bookflix" id="logo" style= "padding: 8%;" >
    </div>

<div class="container">
    {% for perfil in perfiles %}
        <div class="col-sm-6">
            <div class="card text-center mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{perfil.nombre}}</h5>                              
                    <a href="{{ path('seleccionar_perfil', {id: loop.index - 1}) }}" class="btn btn-warning">Entrar</a>                       
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
